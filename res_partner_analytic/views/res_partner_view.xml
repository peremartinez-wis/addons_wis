<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_analytic" model="ir.ui.view">
            <field name="name">res.partner.analytic.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']//field[@name='customer']" position='after'>
                    <field name="sale_account_analytic_id" />
                </xpath>
                <xpath expr="//page[@name='sales_purchases']//field[@name='supplier']" position='after'>
                    <field name="purchase_account_analytic_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
